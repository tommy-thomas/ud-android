<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.udandroid.bakingapp.ui.StepActivity">

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ingredient_quantity"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tv_ingredient_measure"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ingredient_measure"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_ingredient_quantity"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ingredient"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@+id/tv_ingredient_measure"/>



</LinearLayout>
